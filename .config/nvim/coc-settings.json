{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "sql": {
      "command": "sql-language-server",
      "args" : ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
     },
     "intelephense": {
       "command": "intelephense",
       "args": ["--stdio"],
       "filetypes": ["php"],
       "initializationOptions": {
         "storagePath": "/tmp/intelephense"
       }
     }
  }
}
